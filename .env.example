# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_TITLE="Smart Customer Service Chatbot"
API_DEBUG=true

# CORS Settings
# Comma-separated list of allowed origins
# For development, you might want to use: http://localhost:3000,http://127.0.0.1:5500
# For production, use your actual domain: https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5500

# Frontend Configuration
# Use localhost for development, your actual API URL for production
# Example production: https://your-api-domain.com
BACKEND_API_URL=http://127.0.0.1:8000

# NLP Configuration
# Confidence threshold for intent classification (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.3
MAX_CONVERSATION_HISTORY=100
ENABLE_DEBUG_INFO=true

# Response Configuration
# Default language for responses (en or zh)
DEFAULT_LANGUAGE=en
ENABLE_FALLBACK_RESPONSES=true

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG
ENABLE_REQUEST_LOGGING=true