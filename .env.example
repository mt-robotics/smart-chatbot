# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_TITLE="Smart Customer Service Chatbot"
API_DEBUG=true

# CORS Settings
# Comma-separated list of allowed origins
# For development (localhost): http://localhost:3000,http://127.0.0.1:5500
# For development (Docker with nginx-proxy): http://frontend-smart-chatbot.local
# For production, use your actual domain: https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,http://frontend-smart-chatbot.local

# Frontend Configuration
# For development (localhost): http://127.0.0.1:8000
# For development (Docker with nginx-proxy): http://smart-chatbot.local
# For production: https://your-api-domain.com
BACKEND_API_URL=http://127.0.0.1:8000

# NLP Configuration
# Confidence threshold for intent classification (0.0 to 1.0)
CONFIDENCE_THRESHOLD=0.3
MAX_CONVERSATION_HISTORY=100
ENABLE_DEBUG_INFO=true

# Response Configuration
# Default language for responses (en or zh)
DEFAULT_LANGUAGE=en
ENABLE_FALLBACK_RESPONSES=true

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# Docker Configuration
# ============================================================================
# These variables are used by docker-compose files
# Development: docker compose --env-file .env.development -f docker-compose.dev.yml up
# Production: docker compose --env-file .env.production -f docker-compose.prod.yml up -d

# PostgreSQL Configuration (Docker)
POSTGRES_DB=chatbot_dev
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=chatbot_pass
POSTGRES_CONTAINER_NAME=chatbot_postgres_dev

# Backend Configuration (Docker)
BACKEND_CONTAINER_NAME=chatbot_backend_dev
DOCKER_IMAGE_TAG=dev

# Frontend Configuration (Docker - development only)
FRONTEND_CONTAINER_NAME=chatbot_frontend_dev

# Nginx Configuration (Docker - production only)
NGINX_CONTAINER_NAME=chatbot_nginx_prod

# pgAdmin Configuration (Docker - development only)
PGADMIN_CONTAINER_NAME=chatbot_pgadmin_dev
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123

# Virtual Hosts (Docker development with nginx-proxy)
# Must match /etc/hosts entries
VIRTUAL_HOST_BACKEND=smart-chatbot.local
VIRTUAL_HOST_FRONTEND=frontend-smart-chatbot.local
VIRTUAL_HOST_PGADMIN=pgadmin-smart-chatbot.local